name: Deploy CI Workflow
on:
  push:
    branches:
      - main

jobs:
  build:
    name: Deploy
    if: github.repository_owner == 'SongY123'
    runs-on: ubuntu-latest
    permissions:
      contents: read
      packages: write
    steps:
    - uses: actions/checkout@v3
    - name: Set up JDK 11
      uses: actions/setup-java@v3
      with:
        java-version: '11'
        distribution: 'temurin'
        cache: maven
    - name: Deploy to GitHub Packages
      run: .deploy.sh
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
    - name: Upload mpc4j Release Artifact
      uses: actions/upload-artifact@v3.1.0
      with:
        name: mpc4j-release
        path: release